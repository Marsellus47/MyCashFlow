<div class="section panel panel-primary" data-bind="with: transactionIndexViewModel">
	<div class="panel-heading"><span data-bind="text: header"></span></div>
	<div class="panel-body">
		<p>
			<button class="btn btn-primary btn-sm" data-bind="text: btnCreateLabel"></button>
		</p>
		<table class="table table-hover table-striped table-condensed">
			<thead>
				<tr>
					<th>Date</th>
					<th>Amount</th>
					<th>TransactionType</th>
					<th>PaymentMethod</th>
					<th></th>
				</tr>
			</thead>

			<tbody data-bind="foreach: transactions">
				<tr>
					<td data-bind="text: moment(date()).format('LL')"></td>
					<td data-bind="text: amount"></td>
					<td data-bind="text: transactionType"></td>
					<td data-bind="text: paymentMethod"></td>
					<td>
						<button type="button"
								class="btn btn-info btn-sm"
								data-bind="text: $parent.btnDeleteLabel, click: $parent.deleteTransaction"></button>
					</td>
				</tr>
			</tbody>
		</table>

		<div id="delete-dialog-confirm" title="Delete this item?" style="visibility: hidden">
			<p>
				<span class="ui-icon ui-icon-alert" style="float: left; margin: 0 7px 20px 0;"></span>
				This item will be permanently deleted and cannot be recovered. Are you sure?
			</p>
		</div>
	</div>
</div>

<style>
.ui-dialog .ui-dialog-buttonpane .ui-dialog-buttonset {
   float: none;
}

.ui-dialog .ui-dialog-buttonpane {
     text-align: center; /* left/center/right */
}
</style>