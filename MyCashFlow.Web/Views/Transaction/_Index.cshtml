<div class="section panel panel-primary" data-bind="with: transactionIndexViewModel">
	<div class="panel-heading"><span data-bind="text: header"></span></div>
	<div class="panel-body">
		<p>
			<button class="btn btn-primary btn-sm" data-bind="text: btnCreateLabel"></button>
		</p>
		<table class="table table-hover table-striped table-condensed">
			<thead>
				<tr>
					<th>Date</th>
					<th>Amount</th>
					<th>TransactionType</th>
					<th>PaymentMethod</th>
					<th></th>
				</tr>
			</thead>

			<tbody data-bind="foreach: transactions">
				<tr>
					<td data-bind="text: moment(date()).format('LL')"></td>
					<td data-bind="text: amount"></td>
					<td data-bind="text: transactionType"></td>
					<td data-bind="text: paymentMethod"></td>
					<td>
						<button type="button"
								class="btn btn-info btn-sm"
								data-bind="text: $parent.btnDeleteLabel, click: function() { $parent.showDialog(true) }"></button>
					</td>
				</tr>
			</tbody>
		</table>

		<!-- Modal Delete -->
		<div class="modal fade" tabindex="-1" role="dialog" data-bind="modal: showDialog">
			<div class="modal-dialog">

				<!-- Modal content -->
				<div class="modal-content">
					<div class="modal-header">
						<button type="button" class="close" data-dismiss="modal">&times;</button>
						<h4 class="modal-title">Delete transaction</h4>
					</div>
					<div class="modal-body">
						<p>Are you sure you want to delete transaction?</p>
					</div>
					<div class="modal-footer">
						<button type="button" class="btn btn-danger btn-sm"
								data-bind="click: deleteTransaction, text: btnDeleteLabel">
						</button>
						<button type="button" class="btn btn-success btn-sm" data-dismiss="modal">No</button>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>