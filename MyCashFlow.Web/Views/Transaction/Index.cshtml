@model MyCashFlow.Web.ViewModels.Transaction.TransactionIndexViewModel
@using Rsx = MyCashFlow.Resources.Localization.Views.Shared._Shared

@{
    ViewBag.Title = Model.Title;
}

<h2>@Model.Header</h2>

<p>
    @Html.ActionLink(Rsx.Label_Create, MVC.Transaction.ActionNames.Create)
</p>
<table class="table table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Items[0].Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Items[0].Amount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Items[0].TransactionType)
        </th>
		<th>
			@Html.DisplayNameFor(model => model.Items[0].PaymentType)
		</th>
        <th></th>
    </tr>

@foreach (var item in Model.Items) {
    <tr>
		<td>
			@Html.DisplayFor(modelItem => item.Date)
		</td>
		<td>
			@Html.DisplayFor(modelItem => item.Amount)
		</td>
		<td>
			@Html.DisplayFor(modelItem => item.TransactionType )
		</td>
		<td>
			@Html.DisplayFor(modelItem => item.PaymentType)
		</td>
        <td>
            @Html.ActionLink(Rsx.Label_Edit, "Edit", new { /* id=item.PrimaryKey */ }) |
            @Html.ActionLink(Rsx.Label_Details, "Details", new { /* id=item.PrimaryKey */ }) |
            @Html.ActionLink(Rsx.Label_Delete, "Delete", new { /* id=item.PrimaryKey */ })
        </td>
    </tr>
}

</table>
