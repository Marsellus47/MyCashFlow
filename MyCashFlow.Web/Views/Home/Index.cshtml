			</td>
			<td>
				@Html.DisplayFor(model => model.Projects)
			</td>
		</tr>
		<tr>
			<td>
				@Html.DisplayNameFor(model => model.FinishedProjects)
			</td>
			<td>
				@Html.DisplayFor(model => model.FinishedProjects)
			</td>
		</tr>
		<tr>
			<td>
				@Html.DisplayNameFor(model => model.OpenProjects)
