@model MyCashFlow.Web.ViewModels.Project.ProjectCreateViewModel

@{
    ViewBag.Title = Model.Title;
}

<h2><span class="label label-default">@Model.Header</span></h2>

@using (Html.BeginForm(MVC.Project.ActionNames.Create, MVC.Project.Name, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group row">
            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            @Html.LabelFor(model => model.ValidFrom, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.ValidFrom, new { @class = "form-control", @type = "date" })
                @Html.ValidationMessageFor(model => model.ValidFrom, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            @Html.LabelFor(model => model.ValidTill, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.ValidTill, new { @class = "form-control", @type = "date" })
                @Html.ValidationMessageFor(model => model.ValidTill, "", new { @class = "text-danger" })
            </div>
        </div>

		<div class="form-group row">
			@Html.LabelFor(model => model.Budget, htmlAttributes: new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.TextBoxFor(model => model.Budget, new { @class = "form-control", @type = "number", step = 0.01 })
				@Html.ValidationMessageFor(model => model.Budget, "", new { @class = "text-danger" })
			</div>
		</div>

		<div class="form-group row">
			@Html.LabelFor(model => model.TargetValue, htmlAttributes: new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.TextBoxFor(model => model.TargetValue, new { @class = "form-control", @type = "number", step = 0.01 })
				@Html.ValidationMessageFor(model => model.TargetValue, "", new { @class = "text-danger" })
			</div>
		</div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="@Model.Create" class="btn btn-success" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink(Model.Back, MVC.Project.ActionNames.Index, null, new { @class = "btn btn-primary" })
</div>
